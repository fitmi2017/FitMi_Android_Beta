                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/frameHomeWaterGraph"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:background="@color/home_lightgreen_select_light" >


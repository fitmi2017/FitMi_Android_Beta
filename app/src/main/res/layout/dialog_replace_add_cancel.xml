<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"    
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/white"
    android:layout_gravity="center_horizontal"
    >
<!-- android:background="@drawable/roundcorner" -->
    <TextView
        android:id="@+id/dialogTitleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You already have food logged for"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#000"
        />

    <TextView
         android:id="@+id/dialogTitleBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this meal. What would you like to do."
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        android:textColor="#000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="3"
        >


        <Button
            android:id="@+id/replacebtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="Replace"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:textColor="#69B4CE" />

        <Button
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="Add"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:textColor="#69B4CE" />

        <Button
            android:id="@+id/cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="Cancel"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:textColor="#69B4CE" />

        </LinearLayout>
</LinearLayout>
